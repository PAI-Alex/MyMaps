<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Откуда"
            android:textSize="24sp" android:layout_margin="10dp"/>
    <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edit_from" android:background="#B7AF09EB" android:layout_margin="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Куда" android:textSize="24sp" android:layout_margin="10dp"/>
    <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edit_to" android:background="#B7AF09EB"
            android:layout_margin="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_button"
            android:text="Построить маршрут" android:textSize="24sp" android:layout_margin="20dp"/>

</LinearLayout>